<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".">

        <ru.lab.foodcontrolapp.ui.customview.mypickerview.MyPickerView
            android:id="@+id/welcomeAgePicker"
            android:layout_width="80dp"

            android:layout_height="0dp"

            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/welcomeHeightPicker"
            app:layout_constraintEnd_toStartOf="@+id/welcome_ages"
            app:layout_constraintTop_toTopOf="parent"
            app:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/welcome_ages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_age"
            app:layout_constraintBottom_toBottomOf="@+id/welcomeAgePicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/welcome_cm"
            app:layout_constraintTop_toTopOf="@+id/welcomeAgePicker" />

        <ru.lab.foodcontrolapp.ui.customview.mypickerview.MyPickerView
            android:id="@+id/welcomeHeightPicker"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/welcome_btn_skip"
            app:layout_constraintEnd_toStartOf="@+id/welcome_cm"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/welcomeAgePicker"
            app:layout_constraintTop_toBottomOf="@+id/welcomeAgePicker"
            app:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/welcome_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/welcome_height"
            app:layout_constraintBottom_toBottomOf="@+id/welcomeHeightPicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/welcomeHeightPicker"
            app:layout_constraintVertical_bias="0.505" />

        <Button
            android:id="@+id/welcome_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/welcome_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeHeightPicker"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/welcome_btn_skip"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/welcome_skip"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeHeightPicker" />

        <TextView
            android:id="@+id/welcome_input_age_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/welcome_input_age"
            app:layout_constraintBottom_toBottomOf="@+id/welcomeAgePicker"
            app:layout_constraintEnd_toStartOf="@+id/welcomeAgePicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/welcomeAgePicker" />

        <TextView
            android:id="@+id/welcome_input_height_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_input_height"
            app:layout_constraintBottom_toBottomOf="@+id/welcomeHeightPicker"
            app:layout_constraintEnd_toStartOf="@+id/welcomeHeightPicker"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/welcome_input_age_textview"
            app:layout_constraintTop_toTopOf="@+id/welcomeHeightPicker" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

