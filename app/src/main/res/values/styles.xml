<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyBottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_selector</item>
        <item name="backgroundTint">@color/colorBackgroundNavBottom</item>
        <item name="itemActiveIndicatorStyle">@style/MyBottomNavView.ActiveIndicator</item>
        <item name="itemPaddingTop">18dp</item>
        <item name="itemPaddingBottom">14dp</item>
    </style>

    <style name="MyBottomNavView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorBackground</item>
    </style>

    <style name="ConstraintCardView">
        <item name="android:background">@drawable/constraint_card_view</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ConstraintCardView2" parent="ConstraintCardView">
        <item name="android:background">@drawable/constraint_card_view_2</item>
    </style>


</resources>